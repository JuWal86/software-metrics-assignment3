{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "dist"
  },
  "include": [
    "src/**/*.ts",
    "analyzer/**/*.ts",
    "utils/**/*.ts",
    "qualityTests.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
